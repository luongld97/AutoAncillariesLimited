
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Category List</div>
      <div class="panel-body table-responsive">
        <table id="table-products"  class="table table-striped table-hover display nowrap">
          <thead>
          <tr>
            <th>ID</th>
            <th>Product name</th>
            <th>Inventory</th>
            <th>Price</th>
            <th>Description</th>
            <th>Options</th>
          </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div><!--/.row-->

@section scripts
{
  <script src="~/Scripts/pages/product-management.js"></script>
}
