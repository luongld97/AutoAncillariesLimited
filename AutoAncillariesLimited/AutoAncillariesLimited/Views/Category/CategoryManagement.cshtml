@model AutoAncillariesLimited.Models.Category

@{
  ViewBag.Title = "Category Management";
  Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Category List
      </div>
      <div class="panel-body table-responsive">
        <table id="table-categories" class="table table-striped table-hover display nowrap">
          <thead>
            <tr>
              <th>ID</th>
              <th>Category name</th>
              <th>Options</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-3">

    <!--input-form-->

    <div class="panel panel-default" id="action-product-form" style="border: 1px solid #30a5ff;">
      <div class="panel-heading">
        Category Add New
        <button id="btn-product-form-close" class="btn btn-primary pull-right">
          <span class="glyphicon glyphicon-remove" style="margin: 0"></span>
        </button>
      </div>
      @using (Ajax.BeginForm("CategoryInsert", "Category", null, new AjaxOptions { HttpMethod = "post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "error"}, new { id = "category-insert-form" }))
      {
        <div class="panel-body">
          <div class="form-group">
            <label>Category name: </label>
            @Html.TextBoxFor(model => model.Name, new {@class="form-control", placeholder = "Enter category name..."})
            @Html.ValidationMessageFor(model => model.Name)
          </div>
        </div>
        <div class="panel-footer text-right">
          <input id="btn-product-submit" type="submit" value="&nbsp;Save&nbsp;" class="btn btn-primary" />
        </div>
      }
    </div>
    <!--/input-form-->
  </div>
</div><!--/.row-->

@section scripts
{
  <script src="~/Scripts/pages/category-management.js"></script>
}
